<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="seongchanlee.gradecalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instruction:"
        android:textStyle="bold"
        android:id="@+id/Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Type in the grade you recieved, and its weight(both in percent). They will be used to calculate your current average. "
        android:id="@+id/Title2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Title"
        android:layout_toEndOf="@+id/Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:id="@+id/NumTitle"
        android:layout_marginTop="28dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_below="@+id/Title2"
        android:layout_toLeftOf="@+id/GradeTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade"
        android:id="@+id/GradeTitle"
        android:textSize="20dp"
        android:layout_alignTop="@+id/NumTitle"
        android:layout_alignLeft="@+id/Title2"
        android:layout_alignStart="@+id/Title2"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:id="@+id/WeightTitle"
        android:textSize="20dp"
        android:layout_alignTop="@+id/GradeTitle"
        android:layout_alignRight="@+id/Title2"
        android:layout_alignEnd="@+id/Title2"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/Grade1"
        android:layout_below="@+id/GradeTitle"
        android:layout_alignLeft="@+id/GradeTitle"
        android:layout_alignStart="@+id/GradeTitle"
        android:layout_alignRight="@+id/GradeTitle"
        android:layout_alignEnd="@+id/GradeTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/Grade2"
        android:layout_below="@+id/Grade1"
        android:layout_alignLeft="@+id/Grade1"
        android:layout_alignStart="@+id/Grade1"
        android:layout_alignRight="@+id/Grade1"
        android:layout_alignEnd="@+id/Grade1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/Grade3"
        android:layout_below="@+id/Grade2"
        android:layout_alignLeft="@+id/Grade2"
        android:layout_alignStart="@+id/Grade2"
        android:layout_alignRight="@+id/Grade2"
        android:layout_alignEnd="@+id/Grade2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/Grade4"
        android:layout_below="@+id/Grade3"
        android:layout_alignLeft="@+id/Grade3"
        android:layout_alignStart="@+id/Grade3"
        android:layout_alignRight="@+id/Grade3"
        android:layout_alignEnd="@+id/Grade3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/Grade5"
        android:layout_below="@+id/Grade4"
        android:layout_alignLeft="@+id/Grade4"
        android:layout_alignStart="@+id/Grade4"
        android:layout_alignRight="@+id/Grade4"
        android:layout_alignEnd="@+id/Grade4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/Num1"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/Grade1"
        android:layout_alignBottom="@+id/Grade1"
        android:layout_alignLeft="@+id/NumTitle"
        android:layout_alignStart="@+id/NumTitle"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/Num2"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/Grade2"
        android:layout_alignBottom="@+id/Grade2"
        android:layout_alignLeft="@+id/Num1"
        android:layout_alignStart="@+id/Num1"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/Num3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/Grade3"
        android:layout_alignBottom="@+id/Grade3"
        android:layout_alignLeft="@+id/Num2"
        android:layout_alignStart="@+id/Num2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/Num4"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/Grade4"
        android:layout_alignBottom="@+id/Grade4"
        android:layout_alignRight="@+id/NumTitle"
        android:layout_alignEnd="@+id/NumTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/Num5"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/Grade5"
        android:layout_alignBottom="@+id/Grade5"
        android:layout_alignLeft="@+id/Num3"
        android:layout_alignStart="@+id/Num3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Weight1"
        android:layout_alignBaseline="@+id/Grade1"
        android:layout_alignBottom="@+id/Grade1"
        android:layout_alignLeft="@+id/WeightTitle"
        android:layout_alignStart="@+id/WeightTitle"
        android:layout_alignRight="@+id/WeightTitle"
        android:layout_alignEnd="@+id/WeightTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Weight2"
        android:layout_alignBaseline="@+id/Grade2"
        android:layout_alignBottom="@+id/Grade2"
        android:layout_alignLeft="@+id/Weight1"
        android:layout_alignStart="@+id/Weight1"
        android:layout_alignRight="@+id/Weight1"
        android:layout_alignEnd="@+id/Weight1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Weight3"
        android:layout_below="@+id/Weight2"
        android:layout_alignLeft="@+id/Weight2"
        android:layout_alignStart="@+id/Weight2"
        android:layout_alignRight="@+id/Weight2"
        android:layout_alignEnd="@+id/Weight2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Weight4"
        android:layout_alignBaseline="@+id/Grade4"
        android:layout_alignBottom="@+id/Grade4"
        android:layout_alignLeft="@+id/Weight3"
        android:layout_alignStart="@+id/Weight3"
        android:layout_alignRight="@+id/Weight3"
        android:layout_alignEnd="@+id/Weight3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Weight5"
        android:layout_alignBaseline="@+id/Grade5"
        android:layout_alignBottom="@+id/Grade5"
        android:layout_alignLeft="@+id/Weight4"
        android:layout_alignStart="@+id/Weight4"
        android:layout_alignRight="@+id/Weight4"
        android:layout_alignEnd="@+id/Weight4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desired overall average:"
        android:id="@+id/OverallText"
        android:layout_marginTop="49dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/Grade5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/desiredGrade"
        android:layout_alignBaseline="@+id/OverallText"
        android:layout_alignBottom="@+id/OverallText"
        android:layout_alignRight="@+id/Weight5"
        android:layout_alignEnd="@+id/Weight5"
        android:layout_alignLeft="@+id/Weight5"
        android:layout_alignStart="@+id/Weight5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCalculate" />

</RelativeLayout>
